<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Bottom Navigation style -->
    <style name="BottomNavigationStyle">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@drawable/bottom_nav_item_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_item_selector</item>
        <item name="itemRippleColor">@color/primary</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.BottomRoundedCorners" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
    </style>

</resources>