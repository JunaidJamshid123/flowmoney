<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".AddNewCategory">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvAddNewCategoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Add new category"
                android:textColor="#333333"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="Type:"
                android:textColor="#333333"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAddNewCategoryTitle" />

            <RadioGroup
                android:id="@+id/rgType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/tvTypeLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvTypeLabel"
                app:layout_constraintTop_toTopOf="@+id/tvTypeLabel">

                <RadioButton
                    android:id="@+id/rbIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="INCOME"
                    android:textColor="#666666"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rbExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="EXPENSE"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="Name"
                android:textColor="#333333"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTypeLabel" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="Untitled"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#333333"
                android:textColorHint="#AAAAAA"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNameLabel" />

            <TextView
                android:id="@+id/tvIconLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="Icon"
                android:textColor="#333333"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etName" />

            <GridLayout
                android:id="@+id/gridIcons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:columnCount="5"
                android:rowCount="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvIconLabel">

                <RadioGroup
                    android:id="@+id/rgIcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- First row of icons -->
                    <RadioButton
                        android:id="@+id/rbCar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/icon_selector"
                        android:button="@null"
                        android:checked="true"
                        android:drawableTop="@drawable/ic_cash"
                        android:gravity="center"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbClothing"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/icon_selector"
                        android:button="@null"
                        android:drawableTop="@drawable/ic_cash"
                        android:gravity="center"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbFood"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/icon_selector"
                        android:button="@null"
                        android:drawableTop="@drawable/ic_cash"
                        android:gravity="center"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbHome"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/icon_selector"
                        android:button="@null"
                        android:drawableTop="@drawable/ic_cash"
                        android:gravity="center"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbShopping"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/icon_selector"
                        android:button="@null"
                        android:drawableTop="@drawable/ic_cash"
                        android:gravity="center"
                        android:padding="8dp" />

                    <!-- Second row of icons -->
                    <RadioButton
                        android:id="@+id/rbMedical"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/icon_selector"
                        android:button="@null"
                        android:drawableTop="@drawable/ic_cash"
                        android:gravity="center"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbEntertainment"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/icon_selector"
                        android:button="@null"
                        android:drawableTop="@drawable/ic_cash"
                        android:gravity="center"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbHealth"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/icon_selector"
                        android:button="@null"
                        android:drawableTop="@drawable/ic_cash"
                        android:gravity="center"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbChecklist"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/icon_selector"
                        android:button="@null"
                        android:drawableTop="@drawable/ic_cash"
                        android:gravity="center"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbSports"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/icon_selector"
                        android:button="@null"
                        android:drawableTop="@drawable/ic_cash"
                        android:gravity="center"
                        android:padding="8dp" />
                </RadioGroup>
            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridIcons">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_outline_background"
                    android:fontFamily="sans-serif-medium"
                    android:padding="12dp"
                    android:text="CANCEL"
                    android:textColor="#1E8E3E"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_filled_background"
                    android:fontFamily="sans-serif-medium"
                    android:padding="12dp"
                    android:text="SAVE"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>